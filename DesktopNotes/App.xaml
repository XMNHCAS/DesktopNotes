<Application
    x:Class="DesktopNotes.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DesktopNotes"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--  全局静态样式资源引用  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DesktopNotes;component/Resource/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="/DesktopNotes;component/Resource/Styles/ScrollStyles.xaml" />
                <ResourceDictionary Source="/DesktopNotes;component/Resource/Styles/ContextMenuStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
